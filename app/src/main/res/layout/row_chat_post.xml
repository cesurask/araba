<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?ns_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/_5sdp"
        android:id="@+id/rl_chat_post"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="?attr/selectableItemBackground">

        <androidx.nemosofts.view.RoundedImageView
            android:id="@+id/iv_chat_post"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user_photo"
            app:riv_border_color="?ns_border"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_chat_post"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textAlignment="viewStart"
                android:textColor="?ns_title"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_chat_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textAlignment="viewStart"
                android:textColor="?ns_title_sub"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="?ns_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</LinearLayout>