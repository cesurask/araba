<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp">

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:id="@+id/rl_comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/iv_comment_user"
            android:background="@drawable/bg_comment_user"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="@string/app_name"
                android:textAlignment="viewEnd"
                android:textColor="?ns_title"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comment_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="viewEnd"
                android:textColor="?ns_title_sub"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_msg_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="5 min"
                android:textColor="?ns_title_sub"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <androidx.nemosofts.view.RoundedImageView
            android:id="@+id/iv_comment_user"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/user_photo"
            app:riv_border_color="?ns_border"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_corner_radius="@dimen/_30sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentStart="true"
        android:id="@+id/rl_comment_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_comment_admin"
            android:background="@drawable/bg_comment_user"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_comment_admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="@string/app_name"
                android:textAlignment="viewEnd"
                android:textColor="?ns_title"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comment_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="viewEnd"
                android:textColor="?ns_title_sub"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_msg_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="5 min"
                android:textColor="?ns_title_sub"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <androidx.nemosofts.view.RoundedImageView
            android:id="@+id/iv_comment_admin"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/user_photo"
            app:riv_border_color="?ns_border"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_corner_radius="@dimen/_30sdp" />

    </RelativeLayout>


</RelativeLayout>