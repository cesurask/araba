<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/ll_chat_user"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/bg_comment_user"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        tools:ignore="RelativeOverlap">

        <ImageView
            android:id="@+id/iv_comment_user"
            android:src="@drawable/material_design_default"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tv_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="viewEnd"
            android:textColor="?ns_title_sub"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/tv_date_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="5 min"
            android:textColor="?ns_title_sub"
            android:textSize="@dimen/_8ssp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_chat_admin"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@drawable/bg_comment_user"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_comment_admin"
            android:src="@drawable/material_design_default"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tv_comment_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="viewEnd"
            android:textColor="?ns_title_sub"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/tv_date_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="5 min"
            android:textColor="?ns_title_sub"
            android:textSize="@dimen/_8ssp" />

    </LinearLayout>


</RelativeLayout>